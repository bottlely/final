<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mars.reply">
	<select id="replyList" parameterType="Integer" resultType="mars.reply.model.ReplyDTO">
      select content from mars_reply where content_idx=20
   </select>
   <insert id="addReply" parameterType="mars.reply.model.ReplyDTO">
      insert into mars_reply values(mars_reply_idx.nextval, 30, 20, 27, #{content}, 0, 0, 0, sysdate, 0, 0, 0, 0)
   </insert>
   <insert id="re_reply" parameterType="mars.reply.model.ReplyDTO">
      insert into mars_reply values(mars_reply_idx.nextval, 30, 20, 27, #{content}, 0, 1, 0, sysdate, 0, 0, 0, 0)
   </insert>
</mapper>