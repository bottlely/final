<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="mars.chat">
 	<insert id="chatInsert" parameterType="mars.chat.model.ChattingDTO">
 		insert into mars_chat values 
 		(mars_chat_idx.nextval, #{from_idx}, #{to_idx}, sysdate, 0, 0, '', '')
 	</insert>
 	<insert id="groupChatInsert" parameterType="mars.chat.model.GroupChattingDTO">
 		insert into mars_gr_chat values 
 		(mars_gr_chat_idx.nextval, #{from_idx}, #{to_idx}, #{text}, sysdate, sysdate, 0, 0, '', '')
 	</insert>
 </mapper>