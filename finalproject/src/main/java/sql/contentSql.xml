<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mars.content">

	<insert id="uploadContent" parameterType="HashMap">
		insert into content values
		(#{idx}, content_idx.nextval,#{type},sysdate,#{path},#{content},#{writer})
	</insert>
	<select id="searchUploadDate" parameterType="String" resultType="mars.content.model.ContentDTO">
		select *
		from content
		where to_char(writetime,'yyyy-mm-dd') = #{uploadDate}
	</select>
	
	<select id="contentList" parameterType="String" resultType="mars.content.model.ContentDTO">
		select * from content where member_idx = #{member_idx} order by content_idx desc
	</select>
	
</mapper>